/*36/30/24/18/14*/
.echo
  font-size-rem(14)
  line-height: 1.5

  a
    color: $base-link-color

    &:hover, 
    &:focus, 
    &:active
      text-decoration: underline

  h1
  h2
  h3
  h4
  h5
  h6
    font-weight: normal
    line-height: 1.5
    margin: 1.6em 0

  h1
    font-size-rem(30)

  h2
    font-size-rem(24)

  h3
    font-size-rem(18)

  h4
  h5
  h6
    font-size-rem(14)

  p
    margin: 1em 0
    font-size-rem(16)
    text-align: justify
    line-height: 1.8

  address
  blockquote
  dl
  figure
  form
  hr
  img
  ol
  pre
  table
  ul
    margin: 1.6em 0

  hr
    margin: 1.6em auto
    width: 61%
    height: 4px
    border: none
    background: #eee

  img
    max-width: 100%
    height: auto

  caption
    text-transform: uppercase
    padding: 1em
    color: #777

  thead
    background-color: #eee

  td
  th
    border: 1px solid #cbcbcb
    padding: .5em 1em
    text-align: left
    font-weight: normal

  tfoot
    background-color: #f4f4f4

  dl
  ol
  ul
    margin-left: 2em

  dd
    margin-left: 1em

  ol
    list-style: decimal outside

  ul
    list-style: disc outside

  figcaption
    font-size: .85em

  blockquote small,
  cite
    color: #777

  abbr
    cursor: help

  address
    font-style: normal

  code
    // ><code>
    // 排版无需空格, 使用半角空格宽度防止粘连 1em / 2 / 2
    // margin: 0 .25em
    // >[]<code></code>,
    // 排版须有空格, 1em 防止标点符号粘连
    display: inline-block;
    margin: 0 .1em
    white-space: nowrap
    font-size: 0.85em
    font-family: consolas, "微软雅黑"
    border-radius: 4px
    background-color: rgba(27,31,35,.05)
    padding: 3px 6px

  kbd
    @extend .echo code
    box-shadow: 0 1px 0px #CCCCCC, 0 0 0 2px #FFFFFF inset

  blockquote
    margin: 1.6em -50px
    padding: 10px 45px
    border-left: 8px solid $color-green
    border-right: 0
    border-top: 1px solid $border-color;
    border-bottom: 1px solid $border-color;
    background-color: #e1f4f4;

    &.right
      border-left: 0
      border-right: 8px solid $color-green
